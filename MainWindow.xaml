<Window x:Name="MessageWindow" x:Class="AOTMessage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AOTMessage"
        mc:Ignorable="d"
        Title="Message" Height="205" Width="336" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" WindowStyle="None" BorderThickness="1,1,0,1" SizeToContent="WidthAndHeight" MinWidth="200" MinHeight="100" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageText" Margin="10,10,10,10" TextWrapping="Wrap" Text="TextBlock" FontSize="18"/>
        <Button x:Name="OKButton" HorizontalAlignment="Right" VerticalAlignment="Center" MinWidth="60" Grid.Row="1" MinHeight="25" Content="Ok" MaxHeight="16" Click="OKButton_Click" FontSize="16" Margin="10,10,10,10"/>
    </Grid>
</Window>
